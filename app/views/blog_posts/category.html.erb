<% content_for :meta_title, t('.title', category: @category.name, page: current_page) %>
<% content_for :breadcrumbs do %>
    <%= link_to(t('blog_posts.index.nav_text'), blog_posts_path) %>
    <% @category.parents.each do |parent| %>
        <%= link_to(parent.name, blog_posts_category_path(category_slug: parent.long_slug)) %>
    <% end %>
    <span><%= @category.name %></span>
<% end %>

<article>
  <h1><%= @category.name %></h1>

  <%= render partial: 'posts/collection', locals: { collection: @collection } %>
</article>
