<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
    <%= link_to(t('admin.post_types.nav_item.text'), admin_post_types_path) %>
    <%= admin_post_type_link(@entity.post_type) %>
    <% @entity.parents.each do |parent| %>
        <%= admin_post_category_link(parent) %>
    <% end %>
    <%= admin_post_category_link(@entity) %>
    <span><%= t('.heading') %></span>
<% end %>

<article>
  <h1><%= t('.heading') %></h1>

  <ul class="actions">
    <li><%= return_icon(admin_post_category_path(id: @entity.id)) %></li>
    <% if @entity.can_be_deleted? %>
        <li class="danger"><%= destroy_icon(@entity) %></li>
    <% end %>
  </ul>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
